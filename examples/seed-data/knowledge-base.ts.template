/**
 * Seed knowledge base documents
 */
export async function seedKnowledgeBase(userId: string) {
  console.log('ðŸŒ± Seeding knowledge base documents...')

  const createdDocs = []

  for (const docData of sampleDocuments) {
    const doc = await prisma.knowledgeBaseDocument.create({
      data: {
        title: docData.title,
        content: docData.content,
        category: docData.category,
        tags: docData.tags,
        status: docData.status,
        version: docData.version,
        authorId: userId,
        publishedAt: docData.status === 'PUBLISHED' ? new Date() : null,
      },
    })

    createdDocs.push(doc)
    console.log(`  âœ… Created document: ${doc.title}`)
  }

  console.log(`âœ… Seeded ${createdDocs.length} knowledge base documents\n`)
  return createdDocs
}

