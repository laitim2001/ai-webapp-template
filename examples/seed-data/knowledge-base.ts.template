  console.log('ðŸ§¹ Cleaning up knowledge base...')
  
  await prisma.knowledgeBaseDocument.deleteMany({
    where: {
      title: {
        in: sampleDocuments.map(d => d.title),
      },
    },
  })
  
  console.log('âœ… Knowledge base cleaned up\n')
}

