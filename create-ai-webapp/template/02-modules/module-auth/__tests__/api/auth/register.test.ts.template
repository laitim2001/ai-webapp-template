/**
 * @jest-environment node
 */

import { POST } from '@/app/api/auth/register/route'
import { NextRequest } from 'next/server'
import { databaseAdapter } from '@/lib/db/database-adapter'
import bcrypt from 'bcryptjs'

// Mock dependencies
jest.mock('@/lib/db/database-adapter', () => ({
  databaseAdapter: {
    create: jest.fn(),
    findUnique: jest.fn(),
  },
}))

jest.mock('bcryptjs', () => ({
  hash: jest.fn(),
  compare: jest.fn(),
}))

jest.mock('jsonwebtoken')

const mockDatabaseAdapter = databaseAdapter as jest.Mocked<typeof databaseAdapter>
const mockBcrypt = bcrypt as jest.Mocked<typeof bcrypt>
const mockJWT = require('jsonwebtoken')

describe('/api/auth/register', () => {
  beforeEach(() => {
    jest.clearAllMocks()
    ;(mockBcrypt.hash as jest.Mock).mockResolvedValue('hashed-password')
    mockJWT.sign.mockReturnValue('mock-jwt-token')
  })

  it('should return 400 if required fields are missing', async () => {
    const request = new NextRequest('http://localhost:3000/api/auth/register', {
      method: 'POST',
      body: JSON.stringify({
        email: 'test@example.com',
        // missing password, first_name, last_name
      }),
      headers: { 'Content-Type': 'application/json' },
    })

    const response = await POST(request)
    const data = await response.json()

    expect(response.status).toBe(400)
    expect(data.error).toBe('Missing required fields')
  })

  it('should return 400 for invalid email format', async () => {
    const request = new NextRequest('http://localhost:3000/api/auth/register', {
      method: 'POST',
      body: JSON.stringify({
        email: 'invalid-email',
        password: 'password123',
        first_name: 'John',
        last_name: 'Doe'
      }),
      headers: { 'Content-Type': 'application/json' },
    })

    const response = await POST(request)
    const data = await response.json()

    expect(response.status).toBe(400)
    expect(data.error).toBe('Invalid email format')
  })

  it('should return 400 for weak password', async () => {
    const request = new NextRequest('http://localhost:3000/api/auth/register', {
      method: 'POST',
      body: JSON.stringify({
        email: 'test@example.com',
        password: '123', // Too weak
        first_name: 'John',
        last_name: 'Doe'
      }),
      headers: { 'Content-Type': 'application/json' },
    })

    const response = await POST(request)
    const data = await response.json()

    expect(response.status).toBe(400)
    expect(data.error).toBe('Password must be at least 8 characters long')
  })

  it('should return 409 if user already exists', async () => {
    mockDatabaseAdapter.findUnique.mockResolvedValue({
      id: 1,
      email: 'test@example.com',
    })

    const request = new NextRequest('http://localhost:3000/api/auth/register', {
      method: 'POST',
      body: JSON.stringify({
        email: 'test@example.com',
        password: 'password123',
        first_name: 'John',
        last_name: 'Doe'
      }),
      headers: { 'Content-Type': 'application/json' },
    })

    const response = await POST(request)
    const data = await response.json()

    expect(response.status).toBe(409)
    expect(data.error).toBe('User already exists')
    expect(mockDatabaseAdapter.findUnique).toHaveBeenCalledWith('user', {
      where: { email: 'test@example.com' }
    })
  })

  it('should create user successfully with valid data', async () => {
    mockDatabaseAdapter.findUnique.mockResolvedValue(null)
    mockDatabaseAdapter.create.mockResolvedValue({
      id: 1,
      email: 'test@example.com',
      first_name: 'John',
      last_name: 'Doe',
      role: 'USER',
      created_at: new Date(),
    })

    const request = new NextRequest('http://localhost:3000/api/auth/register', {
      method: 'POST',
      body: JSON.stringify({
        email: 'test@example.com',
        password: 'password123',
        first_name: 'John',
        last_name: 'Doe'
      }),
      headers: { 'Content-Type': 'application/json' },
    })

    const response = await POST(request)
    const data = await response.json()

    expect(response.status).toBe(201)
    expect(data.message).toBe('User created successfully')
    expect(data.user).toBeDefined()
    expect(data.token).toBe('mock-jwt-token')

    expect(mockBcrypt.hash).toHaveBeenCalledWith('password123', 12)
    expect(mockDatabaseAdapter.create).toHaveBeenCalledWith('user', {
      data: {
        email: 'test@example.com',
        password_hash: 'hashed-password',
        first_name: 'John',
        last_name: 'Doe',
        role: 'USER',
      }
    })
  })

  it('should handle optional fields correctly', async () => {
    mockDatabaseAdapter.findUnique.mockResolvedValue(null)
    mockDatabaseAdapter.create.mockResolvedValue({
      id: 1,
      email: 'test@example.com',
      first_name: 'John',
      last_name: 'Doe',
      role: 'MANAGER',
      department: 'Sales',
      created_at: new Date(),
    })

    const request = new NextRequest('http://localhost:3000/api/auth/register', {
      method: 'POST',
      body: JSON.stringify({
        email: 'test@example.com',
        password: 'password123',
        first_name: 'John',
        last_name: 'Doe',
        role: 'MANAGER',
        department: 'Sales'
      }),
      headers: { 'Content-Type': 'application/json' },
    })

    const response = await POST(request)

    expect(response.status).toBe(201)
    expect(mockDatabaseAdapter.create).toHaveBeenCalledWith('user', {
      data: {
        email: 'test@example.com',
        password_hash: 'hashed-password',
        first_name: 'John',
        last_name: 'Doe',
        role: 'MANAGER',
        department: 'Sales',
      }
    })
  })

  it('should normalize email to lowercase', async () => {
    mockDatabaseAdapter.findUnique.mockResolvedValue(null)
    mockDatabaseAdapter.create.mockResolvedValue({
      id: 1,
      email: 'test@example.com',
      first_name: 'John',
      last_name: 'Doe',
      role: 'USER',
      created_at: new Date(),
    })

    const request = new NextRequest('http://localhost:3000/api/auth/register', {
      method: 'POST',
      body: JSON.stringify({
        email: ' TEST@EXAMPLE.COM ',
        password: 'password123',
        first_name: 'John',
        last_name: 'Doe'
      }),
      headers: { 'Content-Type': 'application/json' },
    })

    const response = await POST(request)

    expect(response.status).toBe(201)
    expect(mockDatabaseAdapter.findUnique).toHaveBeenCalledWith('user', {
      where: { email: 'test@example.com' }
    })
    expect(mockDatabaseAdapter.create).toHaveBeenCalledWith('user', {
      data: expect.objectContaining({
        email: 'test@example.com',
      })
    })
  })

  it('should return 500 for database errors', async () => {
    mockDatabaseAdapter.findUnique.mockRejectedValue(new Error('Database error'))

    const request = new NextRequest('http://localhost:3000/api/auth/register', {
      method: 'POST',
      body: JSON.stringify({
        email: 'test@example.com',
        password: 'password123',
        first_name: 'John',
        last_name: 'Doe'
      }),
      headers: { 'Content-Type': 'application/json' },
    })

    const response = await POST(request)
    const data = await response.json()

    expect(response.status).toBe(500)
    expect(data.error).toBe('Internal server error')
  })

  it('should not return sensitive data in user object', async () => {
    mockDatabaseAdapter.findUnique.mockResolvedValue(null)
    mockDatabaseAdapter.create.mockResolvedValue({
      id: 1,
      email: 'test@example.com',
      password_hash: 'should-not-be-returned',
      first_name: 'John',
      last_name: 'Doe',
      role: 'USER',
      created_at: new Date(),
    })

    const request = new NextRequest('http://localhost:3000/api/auth/register', {
      method: 'POST',
      body: JSON.stringify({
        email: 'test@example.com',
        password: 'password123',
        first_name: 'John',
        last_name: 'Doe'
      }),
      headers: { 'Content-Type': 'application/json' },
    })

    const response = await POST(request)
    const data = await response.json()

    expect(response.status).toBe(201)
    expect(data.user).toBeDefined()
    expect(data.user.password_hash).toBeUndefined()
  })
})
